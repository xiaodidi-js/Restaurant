/* search.wxss */

/* search-main start */

.search-main {
  margin: 20px 10px 0px;
  height: auto;
  font-family: 'Microsoft Yahei';
}

.search-main .inputData .formData {
  width: 100%;
  height: 40px;
  margin-bottom: 40px;
  display: block;
}

.search-main .inputData .formData .form-search {
  width: 60%;
  height: 40px;
  border: 1px solid #999;
  border-radius: 15px;
  font-family: 'Microsoft Yahei';
  padding-left: 5%;
}

.search-main .inputData .formData .form-confirm {
  background: #ffb37b;
  height: 40px;
  width: 30%;
  border-radius: 15px;
}

.search-main .inputData .formData .form-confirm::before {
  content: '\e63d';
  color: #fff;
}

.search-main .inputData .formData .hoverConfirm {
  background: #ff8023;
}

.search-main .inputData .popo {
  width: 100%;
  height: inherit;
  clear: both;
  margin-top: 40px;
}

.search-main .inputData .popo .li-popo {
  width: 70px;
  height: 32px;
  line-height: 32px;
  border: 1px solid #eee;
  margin: 0px 4px 10px 0px;
  position: relative;
}

.search-main .inputData .popo .li-popo text {
  text-align: center;
  display: block;
  font-family: 'Microsoft Yahei';
}

.search-main .inputData .popo .li-popo .icon-cha {
  position: absolute;
  top: -13px;
  right: -5px;
}

@media all and (max-width: 414px) {
  .search-main .inputData .popo .li-popo {
    margin: 0px 35px 10px 0px;
  }
}

@media all and (max-width: 375px) {
  .search-main .inputData .popo .li-popo {
    margin: 0px 22px 10px 0px;
  }
}

@media all and (max-width: 360px) {
  .search-main .inputData .popo .li-popo {
    margin: 0px 17px 10px 0px;
  }
}

@media all and (max-width: 360px) {
  .search-main .inputData .popo .li-popo {
    margin: 0px 4px 10px 0px;
  }
}

.search-main .inputData .popo .li-popo:nth-child(4n) {
  margin-right: 0px;
}

.search-main .shopList {
  width: 100%;
  margin-top: 185px;
}

.shopList .f30 {
  font-weight: bold;
  color: #ff8023;
}

.search-main .shopList .recommend_scroll_x_box {
  height: auto;
  overflow-x: auto;
}

.search-main .shopList .shopList-main {
  width: 120px;
  height: 147px;
  background: #fff;
  text-align: center;
  line-height: 35px;
  border-radius: 0px 0px 5px 5px;
  margin: 0px 10px 10px 0px;
  display: inline-block;
}

.search-main .shopList .shopList-main .shopImage {
  width: 100%;
  height: 105px;
}

.search-main .shopList .shopList-main .shopImage  image {
  border-radius: 5px 5px 0 0;
}

.search-main .shopList .shopList-main .shopName {
  border-radius: 0px 0px 5px 5px;
}

/* search-main end */
