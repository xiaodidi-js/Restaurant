/* ordermsg.wxss */

/* wrapper start */

.wrapper {
  width: 90%;
  margin: 0px 5%;
}

.wrapper .bl-info-box {
  width: 100%;
  background: #fff;
  margin-top: 10px;
  height: 155px;
}

.wrapper .bl-info-box .sta-line {
  font-weight: bold;
  color: #595757;
  text-align: center;
  line-height: 25px;
  margin-top: 10px;
}

.wrapper .bl-info-box .sta-line::after {
  content: '\e60f';
  margin-left: 10px;
}

.wrapper .bl-info-box .cancel {
  text-align: center;
  line-height: 25px;
  color: #898989;
}

.wrapper .bl-info-box .wait-pay {
  text-align: center;
}

.wrapper .bl-info-box .wait-pay .icon-shijian {
  font-size: 54rpx;
  position: relative;
  top: 5px;
}

.wrapper .bl-info-box button {
  border: none;
}

.wrapper .bl-info-box .cancelOrder, .confirmOrder {
  width: 40%;
  height: 35px;
  margin: 15px 13px;
  background: #fff;
  border: none;
  /* position: unset; */
  line-height: 35px;
}

.wrapper .bl-info-box .confirmOrder {
  background: #ff8023;
  color: #fff;
  border: 1px soldi #ff8023;
}

.wrapper .bl-info-box .cancelOrder {
  border: 1px solid #898989;
  color: #898989;
}

.wrapper .bl-info-box .wait-pay .payTime {
  color: #22ac38;
  margin-left: 10px;
}

.wrapper .select-method {
  width: 94%;
  background: #fff;
  padding: 0px 10px 0px;
  clear: both;
  position: relative;
  top: 10px;
  margin-bottom: 10px;
}

.wrapper .card-box .maininfo {
  width: 100%;
  height: 80px;
  padding: 10px 0px 8px;
  margin: 5px 0px 0px;
  border-bottom: 1px solid #dedede;
}

.wrapper .card-box .maininfo:nth-last-child(1) {
  border: none;
}

.wrapper .card-box .maininfo .msg {
  margin-left: 10px;
  position: relative;
  width: 69%;
}

.wrapper .list-commodity {
  height: 40px;
  line-height: 40px;
  margin-top: 10px;
  background: #fff;
  width: 90%;
  padding: 0px 5%;
  position: relative;
  top: 10px;
}

.wrapper .count {
  position: relative;
  top: 20px;
  height: 40px;
  line-height: 40px;
  padding-bottom: 15px;
}

.wrapper .count .paid {
  padding-left: 20px;
}

.wrapper .service {
  width: 100%;
  margin-top: 15px;
}

.wrapper .service .sverice-title {
  text-align: center;
  background: #fff;
  width: 100%;
  height: 40px;
  line-height: 40px;
}

.wrapper .service .sverice-title::before {
  content: '\e6a7';
  color: #22ac38;
  margin: 0px 10px;
}

.wrapper .service-msg {
  width: 100%;
  background: #fff;
  height: auto;
  padding-bottom: 35px;
  margin: 10px 0px;
}

.wrapper .service-msg .orderNumber {
  width: 90%;
  padding: 0px 5%;
  height: 30px;
  line-height: 30px;
}

.wrapper .service-msg .orderNumber label:first-child {
  width: 25%;
  display: block;
  text-align: left;
}

/* wrapper end */
