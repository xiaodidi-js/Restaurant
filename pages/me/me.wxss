/* person-main start */

.person-main .person-header {
  width: 100%;
  height: 70px;
  background: #ff8023;
  position: relative;
}

.psonImage {
  width: 65px;
  height: 65px;
  margin: 0px auto;
  position: absolute;
  top: 30px;
  left: 0px;
  right: 0px;
  border-radius: 100%;
}

.psonName {
  text-align: center;
  color: #3e3a39;
  font-weight: bold;
  position: absolute;
  bottom: -50px;
  left: 0px;
  right: 0px;
}

/* person-main end */

/* pson-body start */

.pson-body {
  margin: 70px 10px 0px;
}

.pson-body .pson-util .pson-util-li {
  width: 90%;
  height: 45px;
  background: #fff;
  line-height: 45px;
  padding: 0px 5%;
  border-bottom: 1px solid #eee;
}

.pson-body .pson-util .pson-util-li:nth-last-child(1) {
  border: none;
}

.pson-body .pson-util .pson-util-li .icon-dingdan {
  color: #e60012;
}

.pson-body .pson-util .pson-util-li .icon-dizhi1 {
  color: #f39800;
}

.pson-body .pson-util .pson-util-li .icon-dianhua {
  color: #22ac38;
}

.pson-body .pson-util .pson-util-li .util-li-text {
  padding-left: 10px;
}

.pson-body .pson-util .pson-util-li .util-li-text .serverTime {
  color: #595757;
  line-height: 45px;
  padding-left: 10px;
}

.pson-body .pson-util .backLogin {
  width: 100%;
  height: 40px;
  color: #595757;
  line-height: 40px;
  background: #fff;
  margin: 20px 0px;
}

/* pson-body end */
